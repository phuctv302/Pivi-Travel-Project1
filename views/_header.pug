header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
    form.nav__search(action='/search', method='GET')
      button.nav__search-btn
        svg
          use(href='/img/icons.svg#icon-search')
      input.nav__search-input(name='name', type='text', placeholder='Search tours')

  .header__logo
    img(src='/img/logo-white.png', alt='Pivi Travel logo')

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}`, alt='User photo')
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--cta(href='/login') Login
      a.nav__el.nav__el--cta(href='/signup') Sign up 