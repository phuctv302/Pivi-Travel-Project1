doctype html 
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width,initial-scale=1')
      link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700', rel='stylesheet')
      link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;700&display=swap', rel='stylesheet')
      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js')

      link(rel='stylesheet', href='/css/style.css')

      link(rel='shortcut icon', type='image/png', href='/img/favicon.png')
      title Pivi Travel | #{title}

  body(data-alert=`${alert ? alert : ''}`)
    // HEADER
    include _header

    // MAIN
    block content 

    // FOOTER
    include _footer

    script(src='https://js.stripe.com/v3/')
    script(src='/js/bundle.js') 